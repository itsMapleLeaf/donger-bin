{
  "name": "donger-bin",
  "description": "a comfy home for all your dongers",
  "author": "kingdaro",
  "version": "0.2.1",
  "main": "build/main.js",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --require ts-node/register",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "dev:webpack": "webpack --require ts-node/register --watch",
    "dev:nodemon": "nodemon . --dev -x electron -e js,html -w build -w assets",
    "dev": "run-p dev:* --race"
  },
  "dependencies": {
    "@mdi/font": "^2.4.85",
    "emotion": "^9.2.3",
    "formik": "^0.11.11",
    "make-dir": "^1.3.0",
    "polished": "^1.9.2",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-emotion": "^9.2.3"
  },
  "devDependencies": {
    "@types/make-dir": "^1.0.3",
    "@types/prop-types": "^15.5.3",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "@types/webpack": "^4.4.0",
    "@types/webpack-merge": "^4.1.3",
    "cross-env": "^5.2.0",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "ts-loader": "^4.4.1",
    "ts-node": "^6.1.1",
    "typescript": "^2.9.1",
    "typescript-styled-plugin": "^0.6.3",
    "webpack": "^4.12.0",
    "webpack-command": "^0.2.1",
    "webpack-merge": "^4.1.3"
  },
  "build": {
    "appId": "net.kingdaro.dongerbin",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "files": [
      "./build/**/*",
      "./assets/**/*"
    ]
  }
}
