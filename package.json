{
  "name": "donger-bin",
  "description": "a comfy home for all your dongers",
  "author": "kingdaro",
  "version": "0.1.1",
  "main": "build/main.js",
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "start": "electron .",
    "dev:watch": "tsc -w",
    "dev:start": "electron . --dev",
    "dev": "npm run compile && run-p dev:* --race",
    "build": "npm run compile && electron-builder"
  },
  "dependencies": {
    "@mdi/font": "^2.4.85",
    "emotion": "^9.2.3",
    "formik": "^0.11.11",
    "make-dir": "^1.3.0",
    "polished": "^1.9.2",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-emotion": "^9.2.3"
  },
  "devDependencies": {
    "@types/make-dir": "^1.0.3",
    "@types/prop-types": "^15.5.3",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "npm-run-all": "^4.1.3",
    "typescript": "^2.9.1",
    "typescript-styled-plugin": "^0.6.3"
  },
  "build": {
    "appId": "net.kingdaro.dongerbin",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "files": [
      "./build/**/*",
      "./assets/**/*"
    ]
  }
}
